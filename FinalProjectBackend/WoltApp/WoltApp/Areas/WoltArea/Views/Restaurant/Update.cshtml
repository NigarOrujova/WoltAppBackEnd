@model Restaurant
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <h2>Update Restaurant</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-4">
            <label asp-for="@Model.Name" class="form-label">Restaurant name</label>
            <input asp-for="@Model.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input asp-for="@Model.Description" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.HeroPhoto" class="form-label">Hero Photo</label>
            <input asp-for="@Model.HeroPhoto" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.HeroPhoto"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.Photo" class="form-label">Restaurant Photo</label>
            <input asp-for="@Model.Photo" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Photo"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.Address" class="form-label">Address</label>
            <input asp-for="@Model.Address" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Address"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="@Model.ContactNumber" class="form-label">Address</label>
            <input asp-for="@Model.ContactNumber" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.ContactNumber"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.CategoryIds" class="form-label">Categories</label>
            <select asp-for="@Model.CategoryIds" asp-items="@(new SelectList((List<Restaurant>)ViewBag.Restaurants,"Id","Name"))" class="form-control">
            </select>
            <span class="text-danger" asp-validation-for="@Model.CategoryIds"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ProductIds" class="form-label">Products</label>
            <select asp-for="@Model.ProductIds" asp-items="@(new SelectList((List<Restaurant>)ViewBag.Restaurants,"Id","Name"))" class="form-control">
            </select>
            <span class="text-danger" asp-validation-for="@Model.ProductIds"></span>
        </div>
        <div class="form-check col-md-4 text-center">
            <input class="form-check-input" asp-for="IsDeleted">
            <label class="form-check-label" asp-for="IsDeleted">
                Is it C.losed?
            </label>
            <span class="text-danger" asp-validation-for="IsDeleted"></span>
        </div>
        <div class="form-check col-md-4 text-center">
            <input class="form-check-input" asp-for="IsNew">
            <label class="form-check-label" asp-for="IsNew">
                Is it New?
            </label>
            <span class="text-danger" asp-validation-for="IsNew"></span>
        </div>
        <div class="form-check col-md-4 text-center">
            <input class="form-check-input" asp-for="Discount">
            <label class="form-check-label" asp-for="Discount">
                discount?
            </label>
            <span class="text-danger" asp-validation-for="Discount"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DiscountPercent" class="form-label">DiscountPercent</label>
            <input class="form-control" asp-for="DiscountPercent">
            <span class="text-danger" asp-validation-for="DiscountPercent"></span>
        </div>
        <button type="submit" class="btn btn-dark">Update</button>
        <a class="btn btn-pinterest" asp-action="Index">Cancel</a>
    </form>
</div>