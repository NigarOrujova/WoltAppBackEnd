@model Paginate<ProductDTO>
@{
    ViewData["Title"] = "Index";
    int count = ((Model.CurrentPage - 1) * 10) + 1;
}
<div id="product-admin" class="container mt--6 ">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Products</h3>
                    <div class="col-sm-12 d-flex justify-content-end">
                        <a class="btn btn-success" asp-action="Create">Create Product</a>
                    </div>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="name">№</th>
                                <th scope="col" class="sort" data-sort="budget">Image</th>
                                <th scope="col" class="sort" data-sort="budget">Title</th>
                                <th scope="col" class="sort" data-sort="budget">Description</th>
                                <th scope="col" class="sort" data-sort="status">Setting</th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var product in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <span class="badge badge-dot mr-4">
                                            <span class="status text-black">@count</span>
                                        </span>
                                    </td>
                                    <td>
                                        <img style="height:100px" src="~/assets/img/@product.ImageURL" alt="" />
                                    </td>
                                    <td>
                                        @product.Title
                                    </td>
                                    <td>
                                        @product.Description
                                    </td>
                                    <td>
                                        <form>
                                            <button class="btn btn-primary" asp-action="Details" asp-route-id="@product.Id">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                        </form>
                                        <form>
                                            <button class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id">
                                                <i class="bi bi-tools"></i>
                                            </button>
                                        </form>
                                        <form method="post" asp-action="Delete" asp-route-id="@product.Id">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                    @*<div class="modal fade" id="exampleModal_@restaurant.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <h3>@restaurant.Name</h3>
                                            <h2>Do you want delete?</h2>
                                        </div>
                                        <div class="modal-footer">
                                            <form method="post" asp-action="Delete" asp-route-id="@restaurant.Id">
                                                <button type="submit" class="btn btn-danger"> Delete </button>
                                            </form>
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>*@
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
                <nav aria-label="...">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i < Model.PageCount; i++)
                        {
                            <li class="page-item  @(Model.CurrentPage==i? "active" : " ")" aria-current="page">
                                <span class="page-link" asp-action="Index" asp-route-page="@i">@i</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
