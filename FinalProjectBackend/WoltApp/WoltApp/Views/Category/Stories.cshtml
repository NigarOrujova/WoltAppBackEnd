@model List<StoreCategory>
@{
    ViewData["Title"] = "Stories";
}

<section id="restaurants">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Mağazalar</h1>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <a asp-controller="Store" asp-action="Index" asp-route-id="@item.StoreId">
                        <div class="card">
                            <div class="imgArea">
                                <img src="~/assets/img/@item.Store.ImageURL" alt="...">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@item.Store.Name</h5>
                                <p class="card-text">@item.Store.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
