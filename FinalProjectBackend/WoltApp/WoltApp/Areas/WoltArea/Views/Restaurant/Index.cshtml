@model IEnumerable<Restaurant>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Restaurants</h3>
                        <div class="col-sm-12 d-flex justify-content-end">
                            <a class="btn btn-success" asp-action="Create">Create Restaurant</a>
                        </div>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="name">№</th>
                                <th scope="col" class="sort" data-sort="budget">Image</th>
                                <th scope="col" class="sort" data-sort="budget">HeroImage</th>
                                <th scope="col" class="sort" data-sort="budget">Restaurant</th>
                                <th scope="col" class="sort" data-sort="budget">Description</th>
                                <th scope="col" class="sort" data-sort="budget">Address</th>
                                <th scope="col" class="sort" data-sort="budget">Contact Number</th>
                                <th scope="col" class="sort" data-sort="status">Setting</th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var restaurant in Model)
                            {
                            <tr>
                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <span class="status text-black">@count</span>
                                    </span>
                                </td>
                                <td>
                                    <img style="height:100px" src="~/assets/img/@restaurant.ImageURL" alt="" />
                                </td>
                                <td>
                                    <img style="height:100px" src="~/assets/img/@restaurant.HeroImageURL" alt="" />
                                </td>
                                <td>
                                    @restaurant.Name
                                </td>
                                <td>
                                    @restaurant.Description
                                </td>
                                <td>
                                    @restaurant.Address
                                </td>
                                <td>
                                    @restaurant.ContactNumber
                                </td>
                                <td class="text-right">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                            <a class="dropdown-item" asp-action="Detail" asp-route-id="@restaurant.Id">Detail</a>
                                            <a class="dropdown-item" asp-action="Update" asp-route-id="@restaurant.Id">Update</a>
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item" asp-action="Delete" asp-route-id="@restaurant.Id">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">
                    <nav aria-label="...">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

