@model RestaurantDTO
@{
    ViewData["Title"] = "Index";
}
<section id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-2 col-md-12">
                <div class="cardCategory">
                    <ul>
                        @foreach (var item in Model.Categories)
                        {
                            <li><a href="#">@item.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="menu-item">
                    <div class="categoryName">
                        <h2>Burgerlər</h2>
                    </div>
                    <div class="product">
                        @foreach (var item in Model.Products)
                        {
                            <div class="product-item">
                                <div class="line"></div>
                                <div class="card" data-toggle="modal" data-target="#mcProduct-@item.Id">
                                    <div class="row g-0">
                                        <div class="col-md-8">
                                            <div class="card-body">
                                                <h5 class="card-title">@item.Title</h5>
                                                <p class="card-text">
                                                    @item.Description
                                                </p>
                                                <p class="card-text"><span>AZN @item.Price</span></p>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="cardImg">
                                                <img src="./assets/img/@item.ImageURL"
                                                     class="img-fluid rounded-start" alt="...">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Modal -->
                                <div class="modal fade" id="mcProduct-@item.Id" tabindex="-1" role="dialog"
                                     aria-labelledby="exampleModalLabel-@item.Id" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel-@item.Id">
                                                    <img src="./assets/img/@item.ImageURL"
                                                         class="img-fluid rounded-start" alt="...">
                                                </h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <h5 class="card-title">@item.Title</h5>
                                                <p class="card-text">
                                                    @item.Description
                                                </p>
                                                <p class="card-text"><span>AZN @item.Price</span></p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">
                                                    Close
                                                </button>
                                                <button type="button" class="btn btn-primary">Add basket</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="line"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <h2>Məkan məlumatları</h2>
                <h3>Ünvan</h3>
                <p>Uzeyir Hajibayov cross Bulbul avenue, 207, 2nd entrance</p>
                <h3>Contact</h3>
                <p>
                    Allergiyanız və ya pəhrizlə bağlı məhdudiyyətləriniz varsa, restoran ilə əlaqə saxlayın.
                    Restoran sorğu əsasında yemək ilə bağlı məlumatlar təmin edəcək.
                </p>
                <div class="phone-number">
                    <a href="tel:+994770000000"><span>+994770000000</span></a>
                </div>
            </div>
        </div>
    </div>
</section>