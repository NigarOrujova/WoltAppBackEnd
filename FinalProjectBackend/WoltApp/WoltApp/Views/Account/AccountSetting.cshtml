@model RegisterDTO
@{
    ViewData["Title"] = "AccountSetting";
}

<section id="UserProfil">
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                @await Component.InvokeAsync("User")
                <div class="col-lg-8">
                    <div class="main-content">
                        <!-- Header -->
                        <div class="header bg-gradient-primary py-7 py-lg-8 pt-lg-9">
                            <div class="container">
                                <div class="header-body text-center mb-7">
                                    <div class="row justify-content-center">
                                        <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                                            <h1 class="text-white">Change Password</h1>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Page content -->
                        <div class="container mt--8 pb-5">
                            <!-- Table -->
                            <div class="row justify-content-center">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body px-lg-5 py-lg-5">
                                            <div class="text-center text-muted mb-4">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            </div>
                                            <form role="form" method="post">
                                                <div class="text-center">
                                                    <a class="btn btn-primary mt-4" asp-controller="Account" asp-action="ChangePassword">CHANGE PASSWORD</a>
                                                    <button type="submit" class="btn btn-primary mt-4" asp-controller="Account" asp-action="ChangeUsername">CHANGE USERNAME</button>
                                                    <button type="submit" class="btn btn-primary mt-4" asp-controller="Account" asp-action="ChangeEmail">CHANGE EMAIL</button>
                                                    <button type="submit" class="btn btn-primary mt-4" asp-controller="Home" asp-action="Index">CANCEL</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

