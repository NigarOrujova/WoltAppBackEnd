@model Slider
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2>Update Slider</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label">Slider Title</label>
            <input asp-for="@Model.Title" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input asp-for="@Model.Description" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <img src="~/img/@Model.ImageURL" style="height:130px; " alt="" />
        <div class="mb-3">
            <label asp-for="@Model.Photo" class="form-label">Slider Photo</label>
            <input asp-for="@Model.Photo" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Photo"></span>
        </div>
        <button type="submit" class="btn btn-dark">Update</button>
        <a class="btn btn-pinterest" asp-action="Index">Cancel</a>
    </form>
</div>