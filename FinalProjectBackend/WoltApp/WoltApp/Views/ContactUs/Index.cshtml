@model Message
@{
    ViewData["Title"] = "Index";

}

<section id="resHero" style="background-image: url(/assets/img/ContactUs.png);background-position: top;background-repeat: no-repeat;background-size: cover;">
    <div class="container">
        <div class="row align-items-center">
            <div class="hero-area text-white">
                <h1>Contact Us</h1>
            </div>
        </div>
    </div>
</section>
<section id="contactUs" style="margin:50px 0;">
    <div class="container">
        <div class="row w-100 d-flex justify-content-center">
            <div class="col-lg-8 mt-5 mt-lg-0">
                <form method="post" role="form" asp-action="SendMessage">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input asp-for="Name" class="form-control" id="name" placeholder="Your Name" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input asp-for="Surname" class="form-control" id="surname" placeholder="Your Surname" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input asp-for="Email" type="email" class="form-control" name="email" id="email" placeholder="Your Email" required>
                    </div>
                    <div class="form-group mt-3">
                        <input asp-for="Phone" type="tel" class="form-control" name="tel" id="tel" placeholder="Phone Number" required>
                    </div>
                    <div class="form-group mt-3">
                        <textarea asp-for="MessageDescription" class="form-control" rows="5" placeholder="Message"></textarea>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {


                        <div class="text-center"><button class="btn btn-dark" type="submit">Send Message</button></div>
                    }
                    else
                    {
                        <div class="text-center"><a asp-controller="Account" asp-action="Login" class="btn btn-dark">Send Message</a></div>
                    }
                </form>
            </div>
        </div>
    </div>
</section>