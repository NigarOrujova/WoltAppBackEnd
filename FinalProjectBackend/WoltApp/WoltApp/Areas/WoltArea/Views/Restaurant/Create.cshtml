@model Restaurant
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2>Create Category</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Restaurant name</label>
            <input asp-for="@Model.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <input asp-for="@Model.Description" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.HeroPhoto" class="form-label">Hero Photo</label>
            <input asp-for="@Model.HeroPhoto" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.HeroPhoto"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Photo" class="form-label">Restaurant Photo</label>
            <input asp-for="@Model.Photo" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Photo"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Address" class="form-label">Address</label>
            <input asp-for="@Model.Address" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Address"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ContactNumber" class="form-label">Address</label>
            <input asp-for="@Model.ContactNumber" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.ContactNumber"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ControllerName" class="form-label">Address</label>
            <input asp-for="@Model.ControllerName" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.ControllerName"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.CategoryIds" class="form-label">Categories</label>
            <select asp-for="@Model.CategoryIds" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))" class="form-control">
                <option disabled>Please Select</option>
            </select>
            <span class="text-danger" asp-validation-for="@Model.IsActive"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ProductIds" class="form-label">Products</label>
            <select asp-for="@Model.ProductIds" asp-items="@(new SelectList(ViewBag.Products,"Id","Title"))" class="form-control">
                <option disabled>Please Select</option>
            </select>
            <span class="text-danger" asp-validation-for="@Model.IsActive"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>