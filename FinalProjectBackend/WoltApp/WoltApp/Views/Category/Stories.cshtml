@model List<StoreCategory>
@{
    ViewData["Title"] = "Stories";
}

<section id="restaurants">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Mağazalar</h1>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <a asp-controller="Store" asp-action="Index" asp-route-id="@item.StoreId">
                        <div class="card">
                            <div class="imgArea">
                                <img src="~/assets/img/@item.Store.ImageURL" alt="...">
                                @if (item.Store.IsDeleted == true)
                                {
                                    <div class="res-close" style=" background: rgba(0, 0, 0, 0.5); position: absolute; left: 0; right: 0; top: 0; bottom: 0;">
                                        <h5 class="h-100 d-flex align-items-center justify-content-center text-white">Bağlıdır</h5>
                                    </div>
                                }
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@item.Store.Name</h5>
                                <p class="card-text">@item.Store.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
